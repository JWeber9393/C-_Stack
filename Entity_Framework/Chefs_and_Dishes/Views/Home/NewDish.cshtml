@using Chefs_and_Dishes.Models
@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chefs'N'Dishes</title>
</head>
<body>

    <h1>Add a Dish</h1>
    <a href="/">Home</a>

    <div class="text-center">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">   
                    <form asp-action="ProcessDish" asp-controller="Home" method="post">
                        <div class="form-group">
                            <div class="form-group">
                                <span asp-validation-for="_name"></span>
                                <label asp-for="_name"></label>
                                <input class="form-control" asp-for="_name">
                                
                                <span asp-validation-for="Creator"></span>
                                <label asp-for="Creator"></label>
                                <select class="form-control" asp-for="ChefId">
                                    @foreach(var chef in ViewBag.Chefs){
                                    <option value="@chef.ChefId">@chef._fname @chef._lname</option>}
                                </select>
                                
                                <span asp-validation-for="_tastiness"></span>
                                <label asp-for="_tastiness"></label>
                                <select class="form-control" asp-for="_tastiness">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                                

                                <span asp-validation-for="_calories"></span>
                                <label asp-for="_calories"></label>
                                <input type="number" class="form-control" asp-for="_calories">
                                

                                <span asp-validation-for="_description"></span>
                                <label asp-for="_description"></label>
                                <textarea class="form-control" asp-for="_description"></textarea>
                                
                                <br>
                                <button type="submit" class="btn btn-primary form-control">Register</button>
                        </div>
                    </form> 
                </div> 
            </div>
        </div>     
    </div>     

</body>
</html>