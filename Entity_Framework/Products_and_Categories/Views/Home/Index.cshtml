@using Products_and_Categories.Models
@model NewProductModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <div class="container-fluid">
        <div class="row">


            <form asp-action="CreateProduct" asp-controller="Home" method="post">
                <div class="col-12 col-md-8">Products|<a href="/categories">Categories</a></div>
                <h1>New Product</h1>
                <div class="form-group">
                    
                    <input class="form-control" asp-for="newProd.name" placeholder="Product Name">
                    <span class="text-danger" asp-validation-for="newProd.name"></span>
                    

                    <input class="form-control" asp-for="newProd.description" placeholder="Description">
                    <span class="text-danger" asp-validation-for="newProd.description"></span>
                    

                    <input  class="form-control" type="number" step="0.01" asp-for="newProd.price">
                    <span class="text-danger" asp-validation-for="newProd.price"></span>
                    
                    <br>
                    <button type="submit" class="btn btn-primary form-control">Create Product</button>
                
                </div>
            </form>    
        </div>
    </div>     
    <div class="row">
        @{
            foreach(Product prod in @Model.allProducts){
                <p><a href="/products/@prod.ProductId">@prod.name</a></p>
            }
        }
    </div>
</div>